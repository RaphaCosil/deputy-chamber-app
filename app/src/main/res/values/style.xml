<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#2F2B8C</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="LinearStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:radius">8dp</item>
        <item name="elevation">6dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>