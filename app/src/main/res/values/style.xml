<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:paddingLeft">@dimen/base_padding</item>
        <item name="android:paddingRight">@dimen/base_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">6dp</item>
        <item name="contentPadding">@dimen/base_padding</item>
        <item name="android:layout_margin">@dimen/base_margin</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="background">@color/transparent</item>
        <item name="android:fontFamily">@font/inter_18pt_medium</item>
    </style>

    <style name="TextViewLinkStyle">
        <item name="android:textColor">@color/blue_link</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="background">@color/transparent</item>
        <item name="android:fontFamily">@font/inter_18pt_medium</item>
    </style>

    <style name="LinearStyle">
        <item name="android:background">@color/card_background</item>
        <item name="android:radius">@dimen/corner_radius</item>
        <item name="elevation">6dp</item>
<!--        <item name="android:layout_margin">@dimen/base_margin</item>-->
<!--        <item name="android:padding">@dimen/small_padding</item>-->
        <item name="contentPadding">@dimen/base_padding</item>
    </style>
</resources>