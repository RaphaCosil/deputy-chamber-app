<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:paddingLeft">@dimen/base_padding</item>
        <item name="android:paddingRight">@dimen/base_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">6dp</item>
        <item name="contentPadding">@dimen/base_padding</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="background">@color/transparent</item>
        <item name="android:fontFamily">@font/inter_18pt_medium</item>
    </style>

    <style name="TextViewLinkStyle">
        <item name="android:textColor">@color/blue_link</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="background">@color/transparent</item>
        <item name="android:fontFamily">@font/inter_18pt_medium</item>
    </style>

    <style name="LinearStyle">
        <item name="android:background">@color/card_background</item>
        <item name="android:radius">@dimen/corner_radius</item>
        <item name="elevation">6dp</item>
        <item name="android:layout_marginStart">@dimen/linear_layout_margin_sides</item>
        <item name="android:layout_marginEnd">@dimen/linear_layout_margin_sides</item>
        <item name="android:layout_marginBottom">@dimen/linear_layout_margin_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/linear_layout_margin_top_bottom</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="contentPadding">@dimen/base_padding</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/card_background</item>

        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>

        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>

        <item name="itemIconSize">24dp</item>

        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="MyActiveIndicator" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:color">@color/active_indicator_menu</item>
        <item name="android:height">32dp</item>
        <item name="android:width">64dp</item>
        <item name="shapeAppearance">@style/MyActiveIndicatorShape</item>
    </style>

    <style name="MyActiveIndicatorShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>